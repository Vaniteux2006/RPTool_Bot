{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2023", "DOM"], 
    "rootDir": "./",
    "outDir": "./dist",
    "strict": false, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}